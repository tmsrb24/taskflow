<div class="card">
  <div class="card-header">
    <h2 class="card-title"><%= @task.title %></h2>
  </div>
  <div class="card-body">
    <p><strong>Description:</strong></p>
    <p><%= @task.description %></p>
    <hr>
    <p><strong>Status:</strong> <%= @task.completed? ? "Completed" : "Incomplete" %></p>
    <p><strong>Due Date:</strong> <%= @task.due_date? ? @task.due_date.strftime("%B %d, %Y") : "Not set" %></p>
  </div>
  <div class="card-footer">
    <%= link_to "Edit", edit_task_path(@task), class: "btn btn-secondary" %>
    <%= link_to "Back to tasks", tasks_path, class: "btn btn-light" %>
  </div>
</div>