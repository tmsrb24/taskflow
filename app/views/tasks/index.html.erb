<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2">Tasks</h1>
  <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="card-title mb-0">Filters</h5>
  </div>
  <div class="card-body">
    <%= link_to "All", tasks_path, class: "btn btn-sm #{params[:filter].blank? ? 'btn-primary' : 'btn-outline-primary'}" %>
    <%= link_to "Completed", tasks_path(filter: 'completed'), class: "btn btn-sm #{params[:filter] == 'completed' ? 'btn-primary' : 'btn-outline-primary'}" %>
    <%= link_to "Incomplete", tasks_path(filter: 'incomplete'), class: "btn btn-sm #{params[:filter] == 'incomplete' ? 'btn-primary' : 'btn-outline-primary'}" %>
  </div>
</div>

<div id="tasks">
  <%= render @tasks %>
</div>