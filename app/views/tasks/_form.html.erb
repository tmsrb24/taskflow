<%= form_with(model: [ @project, task ], class: "card card-body") do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">
        <%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:
      </h4>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :due_date, class: "form-label" %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :tag_list, "Tags (comma-separated)", class: "form-label" %>
    <%= form.text_field :tag_list, value: task.tag_list.to_s, class: "form-control" %>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box :completed, class: "form-check-input" %>
    <%= form.label :completed, class: "form-check-label" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= form.submit "Save Task", class: "btn btn-primary" %>
  </div>
<% end %>