<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2"><i class="bi bi-speedometer2 me-2"></i>Dashboard</h1>
</div>

<div class="row">
  <!-- Quick Stats -->
  <div class="col-md-4">
    <div class="card text-white bg-danger mb-3">
      <div class="card-header">Overdue Tasks</div>
      <div class="card-body">
        <h5 class="card-title display-4"><%= @tasks_overdue.count %></h5>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card text-white bg-warning mb-3">
      <div class="card-header">Tasks Due Today</div>
      <div class="card-body">
        <h5 class="card-title display-4"><%= @tasks_due_today.count %></h5>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card text-white bg-success mb-3">
      <div class="card-header">Tasks Completed Today</div>
      <div class="card-body">
        <h5 class="card-title display-4"><%= @tasks_completed_today.count %></h5>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Project List -->
  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">My Projects</h5>
        <%= link_to "View All Projects", projects_path, class: "btn btn-sm btn-outline-primary" %>
      </div>
      <div class="list-group list-group-flush">
        <% @projects.limit(5).each do |project| %>
          <%= link_to project, class: "list-group-item list-group-item-action" do %>
            <%= project.name %>
            <span class="badge bg-secondary float-end"><%= project.tasks.count %> tasks</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Project Chart -->
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Tasks Distribution</h5>
      </div>
      <div class="card-body" style="height: 250px;">
        <canvas data-controller="chart"
                data-chart-labels-value="<%= @project_task_counts.keys.to_json %>"
                data-chart-data-value="<%= @project_task_counts.values.to_json %>">
        </canvas>
      </div>
    </div>
  </div>
</div>