<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2"><i class="bi bi-briefcase-fill me-2"></i>My Projects</h1>
  <%= link_to raw('<i class="bi bi-plus-lg"></i> New Project'), new_project_path, data: { turbo_frame: "modal" }, class: "btn btn-primary" %>
</div>

<%= turbo_frame_tag "projects" do %>
  <% if @projects.any? %>
    <div class="list-group">
      <% @projects.each do |project| %>
        <%= render project %>
      <% end %>
    </div>
  <% else %>
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">No projects yet!</h5>
        <p class="card-text">Get started by creating your first project.</p>
        <%= link_to raw('<i class="bi bi-plus-lg"></i> Create a Project'), new_project_path, data: { turbo_frame: "modal" }, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>